ion-view(title='{{title}}')
  ion-content(padding='true')
    .list
        .item.item-divider Question
        label(class='item item-input')
            input(type='text' ng-model="question.label" placeholder="Label")
        label(class='item item-input')
            input(type='text' ng-model="question.question" placeholder="Question")
        .item.item-divider Type of Question
        ion-radio(ng-repeat="(key, type) in questionTypes" ng-value="key" ng-model="question.type" name="questionTypes") {{ type }}
        .item.item-divider Question Possible Answers

        label(class='item item-input', ng-repeat="choice in question.choices track by $index")
            input(type='text' ng-model="question.choices[$index]" placeholder="Answer")
        button(class="button button-block button-balanced" ng-click="addAnswer()") Add another answer
        button(class="button button-block button-assertive" ng-click="addQuestion(question)") Submit Question




