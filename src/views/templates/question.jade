ion-view(title='{{title}}')
  ion-content(padding='true')
    .list
        .item.item-divider Question
        label(class='item item-input')
            input(type='text' ng-model="question" placeholder="Question")
        .item.item-divider Type of Question
        ion-radio(ng-repeat="(key, type) in questionTypes" ng-value="key" ng-model="questionType" name="questionTypes" ng-change="typeChange(questionTypes)") {{ type }}
        .item.item-divider Question Possible Answers

        label(class='item item-input')
            input(type='text' ng-model="choices" placeholder="Answer")
        button(class="button button-block button-balanced" ng-click="addAnswer") Add another answer
        button(class="button button-block button-assertive" ng-click="addQuestion(question,questionType)") Submit Question




